#!/usr/bin/env bash
set -eu

SCRIPT_DIR=$(cd $(dirname $0); pwd)
L10N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $L10N_HOME

source config/l10n-kit.conf

mkdir -p vendor
curl -L https://github.com/doc-l10n-kit/doc-l10n-kit/releases/download/$QUARKUS_ADOC_PO_TRANSLATOR_VERSION/doc-l10n-kit-runner.jar -o vendor/quarkus-adoc-po-translator-runner.jar
find l10n/po/pt_BR/_data/ -name "*.yaml.po" | xargs java -jar vendor/quarkus-adoc-po-translator-runner.jar po machine-translate --source=en --target=PT-BR
find l10n/po/pt_BR/_includes/ -name "*.html.po" | xargs java -jar vendor/quarkus-adoc-po-translator-runner.jar po machine-translate --source=en --target=PT-BR
find l10n/po/pt_BR/_redirects/ -name "*.md.po" | xargs java -jar vendor/quarkus-adoc-po-translator-runner.jar po machine-translate --source=en --target=PT-BR
find l10n/po/pt_BR/_guides/ -name "*.adoc.po" | xargs java -jar vendor/quarkus-adoc-po-translator-runner.jar po machine-translate --source=en --target=PT-BR
find l10n/po/pt_BR/_posts/ -name "*.adoc.po" | xargs java -jar vendor/quarkus-adoc-po-translator-runner.jar po machine-translate --source=en --target=PT-BR

bin/normalize

"COPY --from=BUILD \\\n"
"   /lib64/libfreetype.so.6 \\\n"
"   /lib64/libbz2.so.1 \\\n"
"   /lib64/libpng16.so.16 \\\n"
"   /lib64/\n"
msgstr ""

#. type: delimited block -
#: upstream/_guides/quarkus-runtime-base-image.adoc:57
#: upstream/_guides/quarkus-runtime-base-image.adoc:101
#, no-wrap
msgid ""
"WORKDIR /work/\n"
"COPY target/*-runner /work/application\n"
"RUN chmod 775 /work\n"
"EXPOSE 8080\n"
"CMD [\"./application\", \"-Dquarkus.http.host=0.0.0.0\"]\n"
msgstr ""


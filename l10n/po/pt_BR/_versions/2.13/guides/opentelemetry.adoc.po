msgstr ""

#. type: delimited block -
#: upstream/_versions/2.13/guides/opentelemetry.adoc:320
#, no-wrap
msgid ""
"<dependency>\n"
"    <groupId>io.opentelemetry</groupId>\n"
"    <artifactId>opentelemetry-extension-aws</artifactId>\n"
"</dependency>\n"
msgstr ""


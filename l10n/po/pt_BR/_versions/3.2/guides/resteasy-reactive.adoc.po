#. type: delimited block -
#: upstream/_versions/3.2/guides/resteasy-reactive.adoc:2544
#, no-wrap
msgid ""
"import java.lang.annotation.Annotation;\n"
"import java.lang.reflect.Type;\n"
"import java.util.List;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/3.2/guides/resteasy-reactive.adoc:2550
#, no-wrap
msgid ""
"import jakarta.ws.rs.GET;\n"
"import jakarta.ws.rs.Path;\n"
"import jakarta.ws.rs.ext.ParamConverter;\n"
"import jakarta.ws.rs.ext.ParamConverterProvider;\n"
"import jakarta.ws.rs.ext.Provider;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/3.2/guides/resteasy-reactive.adoc:2552
#, no-wrap
